<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>moneyTracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="css/main.css" />
    <link rel="shortcut icon" href="#"/>

    <!-- JQuery -->
    <script src="/js/jquery v3.3.1.js"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <script src="js/bootstrap.min.js"></script>

    <!-- DataTables -->
    <link rel="stylesheet" href="css/datatables.min.css" type="text/css">
    <script src="js/datatables.min.js"></script>
    
    <!-- amCharts -->
    <script src="https://www.amcharts.com/lib/4/core.js"></script>
    <script src="https://www.amcharts.com/lib/4/charts.js"></script>
    <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>

</head>
<body>
    
    <div class=" margin-5-percent">
        <div class="header text-center header-margin">
            <h1 class ="display-2">Money Tracker Application</h1>
        </div>

        <div class="row margin-bottom">
            <div class="col-md-6" id="form">
                <form action="/add" method="POST">
                    <div class="form-group">
                        <label for="main_date">Date:</label>
                        <div class="col-10 p-0">
                            <input class="form-control color" type="date" value="" id="main_date" name="main_date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="main_cat">Category:</label>
                        <select class="form-control col-10" id="main_cat" name="main_cat">
                            <option value="Salary">Salary</option>
                            <option value="Shopping">Shopping</option>
                            <option value="Sport">Sport</option>
                            <option value="Food">Food</option>
                            <option id="novo"></option>
                        </select>
                        
                    </div>
                    <div class="form-group">
                        <label for="main_sum">Sum:</label>
                        <div class="col-10 p-0">
                            <input class="form-control color" type="number" value="0" id="main_sum" name="main_sum">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="main_com">Comment:</label>
                        <div class="col-10 p-0">
                            <textarea class="form-control color" rows="5" id="main_com" name="main_com"></textarea>
                        </div>
                    </div>
                    <div class="text-center col-10 btn-group" role = "group" aria-label>
                        <button id="addRow" type="button" class="btn btn-primary">Add a new expense</button>
                        <button onclick="myFunction()" id="addCat" type="button" class="btn btn-primary">Add a new category</button>
                    </div>
                </form>
            </div>
            
            <div class="col-md-6">
                <div class="btn-group d-block" role="group" id="ed-buttons">
                    <!-- <button id="editRow" type="button" class="btn btn-info" data-toggle="modal" data-target="#editModal">Edit</button> -->

                        <!-- Modal -->
                        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title m-auto" id="editModalLabel">Edit Row</h5>
                                </div>
                                <div class="modal-body">
                                <form action="/edit" method="POST">
                                    <div class="form-group d-none">
                                        <label for="number-input">Id:</label>
                                        <div class="col-10 p-0">
                                            <input class="form-control" type="number" value="" id="id">
                                        </div>
                                    </div>

                                <div class="form-group">
                                <label for="date-input">Date:</label>
                                <div class="col-10 p-0">
                                    <input class="form-control" type="date" value="" id="date" name="date">
                                </div>
                                </div>
                                <div class="form-group">
                                <label for="catt">Category:</label>
                                <input class="form-control" type="text" value="" id="cat" name="cat">
                                <!-- <select class="form-control col-10" id="category" name="category" data-show-icon="true">
                                    <option value="">Salary</option>
                                    <option value=""><span class="glyphicon glyphicon-shopping-cart"></span>Shopping</option>
                                    <option value="">Sport</option>
                                    <option value="">Food</option>
                                </select> -->

                                </div>
                                <div class="form-group">
                                <label for="number-input">Sum:</label>
                                <div class="col-10 p-0">
                                    <input class="form-control" type="number" value="" id="number">
                                </div>
                                </div>
                                <div class="form-group">

                                </div>
                                <div class="form-group">
                                <label for="comment">Comment:</label>
                                <div class="col-10 p-0">
                                    <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
                                </div>
                                </div>
                                </div>
                                <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary save" id = "save1">Save changes</button>
                                <button id="deleteRow" type="button" class="btn btn-danger">Delete</button>
                                </div>
                                </form>
                                        
                            </div>
                            </div>
                        </div>

                       
                       

                    
                    <button id="showCharts" type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#chartsModal">Show Charts</button>

                        <!-- Modal -->
                        <div class="modal fade" id="chartsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog mw-80-percent mt-140" role="document">
                            <div class="modal-content">
                                <div class="modal-header w-100-percent">
                                    <h5 class="modal-title m-auto" id="exampleModalLabel">Charts</h5>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div id="chartdiv"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group row">
                                                <div id="chartdiv2"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="p-0 ">
                                                <button id ="showBalance" type ="button"  class="d-block mx-auto">Show Balance</button>
                                                <div id="Salary"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    
                                </div>
                            </div>
                            </div>
                        </div>


                </div>


          <div class = "table-responsive">
                <table id="myTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th class='d-none'>Id</th>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Sum</th>
                            <th>Comment</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% main.forEach(function(main) { %>
                            <tr>
                                <td class='d-none'><%= main.main_id %></td>
                                <td><%= main.main_date.toISOString().slice(0,10) %></td>
                                <td><%= main.main_cat %></td>
                                <td><%= main.main_sum %></td>
                                <td><%= main.main_com %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

                                
            </div>

        </div>

    </div><!-- end-jumbotron -->
    <div class="footer-copyright text-center py-3">Â© 2019 made by Creative Tim for a better web
    </div>

    <script src="../js/main.js"></script>
    <script src="js/charts.js"></script>

